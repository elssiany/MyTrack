<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.kevin.mytrack.Activities.DetailActivity">


    <ImageView
        android:src="@drawable/song_music"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

    <Button
        android:textColor="@android:color/white"
        android:onClick="editSong"
        android:background="@color/ms_fab_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="EDITAR"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song"
        android:id="@+id/textViewSong"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:id="@+id/textViewArtist"
        android:layout_below="@+id/textViewSong"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textViewGender"
        android:layout_below="@+id/textViewArtist"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:id="@+id/textViewAlbum"
        android:layout_below="@+id/textViewGender"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

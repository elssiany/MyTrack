<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.kevin.mytrack.Activities.ManageSongActivity">


    <ImageView
        android:src="@drawable/song_music"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textNameArtist" />
    <TextView
        android:textColor="@color/color_text2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song"
        android:id="@+id/textNameSong"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameSong"
        android:layout_below="@+id/textNameSong"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/color_text2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:id="@+id/textNameArtist"
        android:layout_below="@+id/nameSong"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameArtist"
        android:layout_below="@+id/textNameArtist"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/color_text2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textNameGender"
        android:layout_below="@+id/nameArtist"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameGender"
        android:layout_below="@+id/textNameGender"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/color_text2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:id="@+id/textNameAlbum"
        android:layout_below="@+id/nameGender"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameAlbum"
        android:layout_below="@+id/textNameAlbum"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveSong"
        android:id="@+id/button"
        android:textColor="@color/color_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/ms_fab_btn"/>

    <ImageView
        android:src="@android:drawable/ic_menu_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewEdit"
        android:layout_marginEnd="40dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />


</RelativeLayout>
